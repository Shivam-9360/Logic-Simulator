{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["esnext", "dom"],
    "types": ["node", "vite/client"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.d.ts"],
  "references": [{ "path": "../../tsconfig.node.json" }]
}